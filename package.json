{
  "name": "nila",
  "license": "MIT",
  "version": "0.1.2",
  "author": "praveenjuge",
  "main": "dist/index.js",
  "module": "dist/nila.esm.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://nila.vercel.app",
  "description": "UI Elements for React with TailwindCSS",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "ui-components",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praveenjuge/nila.git"
  },
  "bugs": {
    "url": "https://github.com/praveenjuge/nila/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/nila.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/nila.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "husky": "^6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
